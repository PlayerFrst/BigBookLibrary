@model BigBookLibrary.Models.Book

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">@Model.Title</h2>

<div class="card shadow-sm p-4">

    
    @if (!string.IsNullOrEmpty(Model.CoverImagePath))
    {
        <img src="@Model.CoverImagePath"
             class="img-fluid mb-4"
             style="max-height: 350px; object-fit: cover; border-radius: 6px;" />
    }
    else
    {
        <div class="mb-4"
             style="height: 350px; background: #eee; display: flex; align-items: center; justify-content: center; border-radius: 6px;">
            <span class="text-muted">No Image Available</span>
        </div>
    }

    
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author.Name</p>
    <p><strong>Genre:</strong> @Model.Genre.Name</p>

    <div class="mt-4">
        <a href="/Admin/Books/Edit/@Model.Id" class="btn btn-warning me-2">Edit</a>
        <a href="/Admin/Books/Delete/@Model.Id" class="btn btn-danger me-2">Delete</a>
        <a href="/Admin/Books" class="btn btn-secondary">Back</a>
    </div>

</div>
