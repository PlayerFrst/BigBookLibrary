@model IEnumerable<BigBookLibrary.Models.Author>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Authors</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    <a class="btn btn-warning" href="/Admin/Authors/Edit/@author.Id">Edit</a>
                    <a class="btn btn-danger" href="/Admin/Authors/Delete/@author.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
